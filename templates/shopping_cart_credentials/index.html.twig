{% extends 'base.html.twig' %}

{% block title %}cart 2{% endblock %}

{% block body %}
    <div class="example-wrapper bg-white min-h-screen text-black font-poppins overflow-auto">
    {% include '/_defaults/_navbar.html.twig' %}
        <div class="px-16 py-14 min-h-screen">
            <div class="text-sm breadcrumbs">
                <ul>
                    <li class="opacity-50"><a href={{ path('app_home') }}>Home</a></li> 
                    <li><a href={{ path('app_cart') }}>Cart</a></li> 
                </ul>
                <h1 class="font-bold text-4xl">Shopping Cart</h1>
            </div>
            <div class="flex flex-row text-center pt-4">
                <div class="flex flex-row border-b-2 border-black mr-16">
                    <div class="flex flex-row mb-2">
                        <div class="bg-black rounded-full">
                            <p class="text-white mx-3 text-xl">1</p>
                        </div>
                        <p class="ml-2">Shopping Cart</p>
                    </div>
                </div>
                <div class="flex flex-row border-b-2 border-black mr-16">
                    <div class="flex flex-row mb-2">
                        <div class="bg-black rounded-full">
                            <p class="text-white mx-3 text-xl">2</p>
                        </div>
                        <p class="ml-2">Checkout details</p>
                    </div>
                </div>
                <div class="flex flex-row opacity-50">
                    <div class="flex flex-row mb-2">
                        <div class="bg-black rounded-full">
                            <p class="text-white mx-3 text-xl">3</p>
                        </div>
                        <p class="ml-2">Order complete</p>
                    </div>
                </div>
            </div>
            <div>
                <div class="mt-12 ml-7">
                    <p class="font-bold text-lg">Contact Information</p>
                        <div class="w-2/5">
                            <div class="mt-5 flex">
                                <div class="mr-10">
                                    <p class="mb-2 text-gray-600 text-xs font-black">FIRST NAME *</p>
                                    <input placeholder="First name" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-80">
                                </div>
                                <div>
                                    <p class="mb-2 text-gray-600 text-xs font-black">LAST NAME *</p>
                                    <input placeholder="Last name" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-80">
                                </div>
                            </div>
                            <div class="mt-6">
                                <p class="mb-2 text-gray-600 text-xs font-black">PHONE NUMBER</p>
                                <input placeholder="Phone number" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-full">
                            </div>
                            <div class="mt-6">
                                <p class="mb-2 text-gray-600 text-xs font-black">EMAIL ADDRESS</p>
                                <input placeholder="Your email" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-full">
                            </div>
                        <div>
                    </div>
                </div>
                </div>
                <div class="mt-12 ml-7">
                    <p class="font-bold text-lg">Shipping Address</p>
                        <div class="w-2/5">
                            <div class="mt-5">
                                <p class="mb-2 text-gray-600 text-xs font-black">CITY *</p>
                                <input placeholder="City" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-full">
                            </div>
                            <div class="mt-5">
                                <p class="mb-2 text-gray-600 text-xs font-black">STREET ADDRESS *</p>
                                <input placeholder="Street address" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-full">
                            </div>
                            <div class="mt-5">
                                <p class="mb-2 text-gray-600 text-xs font-black">ZIP CODE *</p>
                                <input placeholder="Zip code" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-full">
                            </div>
                            <div class="mt-5 flex">
                                <div class="mr-10">
                                    <p class="mb-2 text-gray-600 text-xs font-black">PHONE NUMBER</p>
                                    <input placeholder="Phone number" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-80">
                                </div>
                                <div>
                                    <p class="mb-2 text-gray-600 text-xs font-black">BILLING ADDRESS</p>
                                    <input placeholder="Billing address" class="border-2 focus:outline-none px-3 rounded-lg py-2 w-80">
                                </div>
                            </div>
                        <div>
                    </div>
                    <div class="mt-14">
                        <button class="text-white bg-black rounded-lg w-full h-12">PLACE ORDER</button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    {% include '/_defaults/_footer.html.twig' %}
{% endblock %}
