{% extends 'base.html.twig' %}

{% block title %}cart 2{% endblock %}

{% block body %}
    <div class="example-wrapper bg-white min-h-screen text-black font-poppins overflow-auto">
    {% include '/_defaults/_navbar.html.twig' %}
