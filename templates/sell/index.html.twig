{% extends 'base.html.twig' %}

{% block title %}Sell{% endblock %}

{% block body %}
<div class="bg-white min-h-screen text-black font-poppins overflow-auto">
    {% include '/_defaults/_navbar.html.twig' %}
    <div class="flex flex-col justify-center h-full p-8">
        <h1 class="text-4xl font-bold pb-8">Sell</h1>

        {{ form_start(form, {'attr': {'class': 'flex flex-col'}}) }}
            <div class="pb-8">
                {{ form_row(form.name, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-2 pt-4 flex flex-col', 'placeholder': 'Name'}}) }}
            </div>
            <div class="pb-8">
                {{ form_row(form.description, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-2 pt-4 flex flex-col', 'placeholder': 'Description'}}) }}
            </div>
            <div class="pb-8">
                {{ form_row(form.price, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-2 pt-4 flex flex-col', 'placeholder': 'Price'}}) }}
            </div>
            <div class="pb-8">
                {{ form_row(form.user_pic, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-2 pt-4 flex flex-col', 'placeholder': 'Image Link'}}) }}
            </div>

            <div class="flex justify-center w-11/12">
                <button class="text-white bg-black py-2  border-black border font-bold rounded-xl hover:bg-white hover:text-black transition-all duration-300 w-44 mt-3" type="">{{ button_label|default('SUBMIT') }}</button>

            </div>
        {{ form_end(form) }}
    </div>

            {# {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }} #}
</div>
{% endblock %}
