{% extends 'base.html.twig' %}

{% block title %}Sell{% endblock %}

{% block body %}
<div class="bg-white min-h-screen text-black font-poppins overflow-auto">
    {% include '/_defaults/_navbar.html.twig' %}
    <div class="col-start-1 flex flex-col p-14">
        <div class="flex flex-col justify-center h-full">
            <h1 class="text-4xl font-bold pb-8">Sell</h1>
            <div class="flex flex-col">
                <div class="pb-8">
                    <input required type="text" placeholder="Name" class="bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4">
                </div>
                <div class="pb-8">
                    <input required type="text" placeholder="Description" class="bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4">
                </div>
                <div class="pb-8">
                    <input required type="text" placeholder="Price" class="bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4">
                </div>
                <div class="pb-8">
                    <input required type="url" placeholder="Image Link" class="bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4">
                </div>
            </div>
            
            <div class="flex justify-center w-11/12">
                <a href="{{ path('app_home') }}"> 
                    <button class="btn btn-wide text-white" type="submit">SUBMIT</button>
                </a>
            </div>
        </div>
    
    <div class="col-start-2">
        <img src="{{ asset('/img/register.png') }}" alt="Register Image" class="w-full h-screen">
    </div>
</div>
{% endblock %}
