{% extends 'base.html.twig' %}

{% block title %}Update{% endblock %}

{% block body %}
<div class="bg-white min-h-screen text-black font-poppins overflow-auto">
    {% include '/_defaults/_navbar.html.twig' %}
    <div class="col-start-1 flex flex-col p-8">
        {{ form_start(form, {'attr': {'class': 'col-start-1 flex flex-col p-14'}}) }}
            <div class="flex flex-col justify-center h-full">
                <h1 class="text-4xl font-bold pb-8">{{ button_label|default('Save') }}</h1>
                <div class="flex flex-col">
                    <div class="pb-8">
                        {{ form_row(form.name, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4'}}) }}
                    </div>
                    <div class="pb-8">
                        {{ form_row(form.description, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4'}}) }}
                    </div>
                    <div class="pb-8">
                        {{ form_row(form.price, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4'}}) }}
                    </div>
                    <div class="pb-8">
                        {{ form_row(form.user_pic, {'attr': {'class': 'ml-4 bg-transparent border-b-2 border-b-gray-400 outline-none w-11/12 pb-4'}}) }}
                    </div>
                </div>
                
                <div class="flex justify-center w-11/12">
                    <button class="btn btn-success text-white m-2" type="submit">{{ button_label|default('Save') }}</button>
                    {# <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button class="btn btn-error text-white m-2">Delete</button>
                    </form> #}
                </div>

            </div>
            {{ form_end(form) }}
    </div>
</div>
{% endblock %}
