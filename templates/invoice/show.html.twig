{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ invoice.date ? invoice.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ invoice.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ invoice.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ invoice.mail }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ invoice.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ invoice.address }}</td>
            </tr>
            <tr>
                <th>Postal</th>
                <td>{{ invoice.postal }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ invoice.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_invoice_index') }}">back to list</a>

    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>

    {{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
