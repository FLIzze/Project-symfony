{% extends 'base.html.twig' %}

{% block title %}Hello ContactUsController!{% endblock %}

{% block body %}
<div class="example-wrapper bg-white min-h-screen text-black font-poppins">
    <div class="navbar">
        <div class="navbar-start">
            <img src={{ asset('img/logo.png') }} alt="Logo" class="w-44">
        </div>
        <div class="navbar-center">
            <a class="ml-8 opacity-50">Home</a>
            <a class="ml-8 opacity-50">Shop</a>
            <a class="ml-8 opacity-50">Product</a>
            <a class="ml-8">Contact Us</a>
        </div>
        <div class="navbar-end pr-8">
            <img src={{ asset('img/search.svg') }} alt="Search" class="pr-4">
            <img src={{ asset('img/Account.svg') }} alt="Search" class="pr-4">
            <div class="flex flex-row">
                <img src={{ asset('img/Cart.svg') }} alt="Search" class="">
                <div class="bg-green-500 rounded-full">
                    <p class="mx-2">2</p>
                </div>
            </div>
        </div>
    </div>
    <div class="grid grid-cols-2">
        <div class="col-start-1 flex flex-col p-14">
            <div class="flex flex-col justify-center h-full">
                <h1 class="text-secondary text-4xl font-bold pb-8">Contact Us</h1>
                <div class="flex flex-col">
                    <div class="pb-8">
                        <input type="text" placeholder="Name" class="bg-transparent border-b-2 border-gray-400 outline-none w-11/12 pb-4">
                    </div>
                    <div class="pb-8">
                        <input type="text" placeholder="Email address" class="bg-transparent border-b-2 border-gray-400 outline-none w-11/12 pb-4">
                    </div>
                    <div class="pb-8">
                        <input type="text" placeholder="Your message" class="bg-transparent border-b-2 border-gray-400 outline-none w-11/12 pb-4">
                    </div>
                </div>
                <label for="accept" class="flex flex-row justify-between w-11/12 pb-8">
                    <div class="flex items-center">
                        <input type="checkbox" name="accept" class="checkbox border-black">
                        <span class="pl-4">Please sign me up for the <span class="font-bold">Newsletter</span></span>
                    </div>
                </label>
                <div class="flex justify-center w-11/12">
                    <a href={{ path('app_home') }}> 
                        <button class="btn btn-wide text-white" type="submit">SEND MESSAGE</button>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-start-2">
            <img src="{{ asset('/img/register.png') }}" alt="Register Image" class="w-full h-screen">
        </div>
    </div>
    <div class="relative bottom-0 w-full">
            <div class="topfooter bg-black text-white flex flex-row items-center justify-between border-b-2 border-gray-400 pt-16">
                <div class="flex flex-row items-center mb-4">
                    <img src={{ asset('img/logo_no_background.png') }} alt="Logo" class="w-44">
                    <div class="border-l-2 border-gray-400">
                        <p class="ml-4">Buy flowers</p>
                    </div>
                </div>
                <div class="flex pr-8">
                    <a class="ml-8">Home</a>
                    <a class="ml-8">Shop</a>
                    <a class="ml-8">Product</a>
                    <a class="ml-8">Contact Us</a>
                </div>
            </div>
            <div class="botfooter bg-black text-white flex flex-row items-center justify-between pb-16 pt-2">
                <div class="flex flex-row items-center">
                    <a class="ml-8">Copyright Â© 2023 Flowers. All rights reserved</a>
                    <a class="ml-8">Privacy Policy</a>
                    <a class="ml-8">Terms of Use</a>
                </div>
                <div class="flex pr-8">
                    <img src={{ asset('img/instagram.svg') }} alt="Instagram" class="pr-4">
                    <img src={{ asset('img/youtube.svg') }} alt="Youtube" class="pr-4">
                    <img src={{ asset('img/facebook.svg') }} alt="Facebook" class="pr-4">
                </div>
            </div>
        </div>
</div>
{% endblock %}
